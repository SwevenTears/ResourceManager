<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@drawable/background_file_menu">

    <TextView
        android:text="分享"
        android:textColor="#000000"
        android:id="@+id/single_file_menu_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/menu_text_button"/>

    <TextView
        android:text="剪切"
        android:textColor="#000000"
        android:id="@+id/single_file_menu_cut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/menu_text_button" />

    <TextView
        android:text="复制"
        android:textColor="#000000"
        android:id="@+id/single_file_menu_copy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/menu_text_button" />

    <TextView
        android:text="删除"
        android:textColor="#000000"
        android:id="@+id/single_file_menu_del"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/menu_text_button" />

    <TextView
        android:text="重命名"
        android:textColor="#000000"
        android:id="@+id/single_file_menu_rename"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/menu_text_button" />

    <TextView
        android:text="详情"
        android:textColor="#000000"
        android:id="@+id/single_file_menu_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/menu_text_button" />

</LinearLayout>