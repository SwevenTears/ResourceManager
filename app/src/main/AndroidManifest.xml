<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ccyy.resourcemanager">

    <!-- 文件读取权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 文件写入权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".music.MusicActivity"
            android:label="音乐播放器" />
        <activity
            android:name=".photo.PhotoActivity"
            android:label="图片浏览器" />
        <activity
            android:name=".text.TextActivity"
            android:label="文本编辑器" />
        <activity
            android:name=".video.VideoActivity"
            android:label="视频播放器" />
        <activity
            android:name=".text.EditTextActivity"
            android:label="@string/title_activity_edit_text"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden"> </activity>
    </application>

</manifest>